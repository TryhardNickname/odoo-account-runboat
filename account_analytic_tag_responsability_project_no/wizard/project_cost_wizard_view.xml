<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="choose_project_number_and_cost_center_view_form" model="ir.ui.view">
        <field name="name">project.cost.center.wizard.form</field>
        <field name="model">project.cost.center.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="res_id" invisible="1"/>
                        <field name="res_model" invisible="1"/>
                        <field name="project_no"/>
                        <field name="area_of_responsibility"/>
                    </group>
                </group>

                <footer>
                    <button name="action_add_project_and_cost_center" type="object" string="Add" class="btn-primary"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
