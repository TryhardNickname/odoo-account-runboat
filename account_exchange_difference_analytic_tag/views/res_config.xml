<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
  <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">hr_expense_menu_settings_inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='record_transactions']/div[hasclass('o_setting_right_pane')]/div[hasclass('content-group')]" position="after">
                    <div class="row mt8">
                        <label string="Exchange Invoices Draft" for="exchange_invoice_to_draft" class="col-lg-3 o_light_label"/>
                        <field name="exchange_invoice_to_draft"/>
                    </div>

                </xpath>
            </field>
    </record>
  
  </data>
</odoo>


