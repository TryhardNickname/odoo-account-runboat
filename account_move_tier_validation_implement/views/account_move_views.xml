<odoo>
    <data>
        <record id="view_move_form_validation" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@id='invoice_tab']" position="after">
                    <page id="validation_tab" string="Validation Info" name="validation_info">
                                <field name="move_tier_validator"/>
                                <field name= "reviewer_ids"/>
                                <field name="review_ids"/>
                    </page>
                   
                </xpath>
            </field>
        </record>
    </data>
</odoo>

