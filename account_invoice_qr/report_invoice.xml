<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <div class="page" position="after">
                <t t-if="not o and doc">
                    <t t-set="o" t-value="doc" />
                </t>
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id" />
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company" />
                </t>
                <div class="footer">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 text-right">
                                <h3>
                                    TO PAY
                                    <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                </h3>
                            </div>
                        </div>
                        <div style="border-top: 1px solid black;">
                            <div class="container">
                                <div class="row">
                                    <div class="col-xs-3 col-md-3 col-lg-3 text-left" style="font-size:10px;">
                                        <ul t-if="not company.custom_footer" class="list-inline">
                                            <t t-set="company" t-value="company.sudo()" />
                                            <li t-if="company.phone">
                                                Phone:
                                                <span t-field="company.phone" />
                                            </li>
                                            <li t-if="company.fax">
                                                Fax:
                                                <span t-field="company.fax" />
                                            </li>
                                            <li t-if="company.email">
                                                Email:
                                                <span t-field="company.email" />
                                            </li>
                                            <li t-if="company.website">
                                                <!--
                                                     Website:
                                                -->
                                                <span t-field="company.website" />
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-xs-3 col-md-3 col-lg-3 text-left" style="font-size:10px;">
                                        <ul t-if="not company.custom_footer" class="list-inline" name="financial_infos">
                                            <li t-if="company.vat">
                                                TIN:
                                                <span t-field="company.vat" />
                                            </li>
                                            <li>
                                                <t t-set="bankgiro" t-value="', '.join(company.bank_ids.filtered(lambda b: b.acc_type=='bankgiro').mapped('acc_number'))" />
                                                Bankgiro:
                                                <span t-esc="bankgiro" />
                                            </li>
                                            <li>
                                                <t t-set="plusgiro" t-value="', '.join(company.bank_ids.filtered(lambda b: b.acc_type=='plusgiro').mapped('acc_number'))" />
                                                Plusgiro:
                                                <span t-esc="plusgiro" />
                                            </li>
                                            <li>
                                                <t t-set="iban" t-value="', '.join(company.bank_ids.filtered(lambda b: b.acc_type=='iban').mapped('acc_number'))" />
                                                IBAN:
                                                <span t-esc="iban" />
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-xs-3 col-md-3 col-lg-3 text-left" style="font-size:10px;">
                                        <span>
                                            <strong>QR-kod för betalning</strong>
                                            <br />
                                            Läs mer om QR-kod och hur
                                            <br />
                                            du kan använda den på
                                            <br />
                                            <strong>www.usingqr.se</strong>
                                            <br />
                                            eller kontakta din bank.

                                        </span>
                                    </div>
                                    <div class="col-xs-3 col-md-3 col-lg-3 text-right" style="font-size:10px;">
                                        <span>Bild på qr-kod!</span>
                                        <ul class="list-inline">
                                            <li>
                                                Page:
                                                <span class="page" />
                                                /
                                                <span class="topage" />
                                            </li>
                                            <!--
                                                 <li>Page:</li>
                                                 <li>
                                                 <span class="page" />
                                                 </li>
                                                 <li>/</li>
                                                 <li>
                                                 <span class="topage" />
                                                 </li>
                                            -->
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
<!--
                    <div class="text-center" style="border-top: 1px solid black;">
